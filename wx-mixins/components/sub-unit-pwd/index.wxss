/* 弹出框 */
.pay-pop-view{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.418);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  }
  .pay-pop-view-item{
  width: 650rpx;
  height: 400rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 12rpx;
  padding: 40rpx;
  box-sizing: border-box;
  }
  .pay-pop-view-item-image{
    width: 35rpx;
    height: 35rpx;
    margin-left: 150rpx;
  }
  .nopassword{
    width: 580rpx;
    display: flex;
    justify-content: flex-end;
    font-size: 36rpx;
    color: #666666;
  }
  .indep-password-box-2{
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    display: flex;
  }
  .input-show-item{
    width: 100rpx;
    height: 100rpx;
    border: solid 1rpx black ;
    margin-left: -1rpx;
    text-align: center;
  }