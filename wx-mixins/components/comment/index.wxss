/* components/comment/index.wxss */
@import "/static/css/flex.wxss";

.bottom-view{
	height: 100rpx;
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 999;
}

.message-view{
	width: 690rpx;
	height: 58rpx;
	background: #f5f5f5;
	border-radius: 29rpx;
	font-size: 24rpx;
	color: #333333;
}

.message-view>image:first-child{
	width: 20rpx;
	height: 23rpx;
	margin-right: 16rpx;
}

.message-view>image:last-child{
	width: 33rpx;
	height: 28rpx;
	padding-left: 40rpx;
}

.pop-keybord{
	width: 750rpx;
	height: 240rpx;
	padding: 20rpx 30rpx;
	box-sizing: border-box;
	position: fixed;
	left: 0;
	animation: aniopacity 500ms ;
}

.msg-input-view{
	background-color: #F8F8F8;
	border-radius: 10rpx;
	padding: 20rpx;
	height: 200rpx;
	box-sizing: border-box;
	/* overflow-y: scroll; */
}

.comm-view{
	width: 750rpx;
	background: #ffffff;
	border-radius: 20rpx 20rpx 0rpx 0rpx;
	margin-top: 50rpx;
}
.fail-img{
	width: 36rpx;
	height: 36rpx;
}

@keyframes aniopacity{
	from{
		opacity: 0;
	}
	to{
		opacity: 1;
	}
}


::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

